<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@android:color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/content_search_advice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="50dp"
            android:background="@android:color/background_light">

            <AutoCompleteTextView
                android:id="@+id/payee"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/searchButton"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/searchButton"
                android:layout_alignTop="@+id/payeetv"
                android:background="#d1d0d0"
                android:ems="10"
                android:inputType="textPersonName" />
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="true"
                android:indeterminateTint="#288fe2"
                android:visibility="gone"
                android:elevation="3dp"

                android:gravity="center"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/payeetv"
                android:layout_marginTop="15dp"
                android:text="Project"
                android:textSize="24dp" />

            <AutoCompleteTextView
                android:id="@+id/project"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/payee"
                android:layout_alignStart="@+id/payee"
                android:layout_alignTop="@+id/textView3"
                android:layout_toEndOf="@+id/textView5"
                android:background="#d1d0d0"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/project"
                android:text="Date of Range"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="40dp"
                android:text="From"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/fromDate"
                android:layout_alignEnd="@+id/searchButton"
                android:layout_alignRight="@+id/searchButton"
                android:paddingLeft="20dp"
                android:text="To"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="20dp"
                android:text="Status"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView8"
                android:layout_alignEnd="@+id/textView7"
                android:layout_alignRight="@+id/textView7"
                android:text="Disbursed"
                android:textSize="22sp" />

            <Button
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#4fb9ea"
                android:text="Search" />

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/searchButton"
                android:text="Result:"
                android:textColor="#7bf679"
                android:textSize="30dp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/toDate"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/textView7"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/textView7"
                android:layout_toRightOf="@+id/textView7"
                android:background="#d1d0d0"
                android:ems="10"
                android:inputType="date" />

            <EditText
                android:id="@+id/fromDate"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_above="@+id/textView8"
                android:layout_alignEnd="@+id/textView5"
                android:layout_alignRight="@+id/textView5"
                android:background="#d1d0d0"
                android:ems="10"
                android:inputType="date" />

            <TextView
                android:id="@+id/resultString"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/project"
                android:layout_alignLeft="@+id/payeetv"
                android:layout_alignRight="@+id/project"
                android:layout_alignStart="@+id/payeetv"
                android:layout_below="@+id/result"
                android:layout_marginTop="16dp"
                android:layout_toStartOf="@+id/textView7"
                android:textSize="22dp"
                android:background="@android:color/background_light"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/searchButton"
                android:text="Result:"
                android:textColor="#7bf679"
                android:textSize="30dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/payeetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignEnd="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/textView3"
                android:layout_marginTop="16dp"
                android:text="Payee"
                android:textSize="24dp" />


        </RelativeLayout>
    </LinearLayout>
</ScrollView>